{%- if section.settings.fullwidth -%}
  {%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
  {%- assign container = 'kretoss-container' -%}
{%- else -%}
  {%- assign container = 'page-width' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
  {%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin  = section.settings.margin | split: "|" %}
{% assign padding = section.settings.padding | split: "|" %}

{%- style -%}
/* ===============================
   SPACING
================================ */
#shopify-section-{{ section.id }} .section-faqs-tab{
  {% if margin[0] != blank %}margin: {{ margin[0] }};{% endif %}
  {% if padding[0] != blank %}padding: {{ padding[0] }};{% endif %}
}

.faqs_tab_container {
    display: grid;
    gap: 54px;
    grid-template-columns: 1.05fr 1.95fr;
}

.faqs_top h2 {
    font-weight: 800;
    font-size: 48px;
    line-height: 48px;
    letter-spacing: -2.4px;
    margin: 0px;
}
.faqs_top h2 span{
    color: var(--primary_color);
}
.faqs_top p {
    margin: 24px 0px 54px;
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    letter-spacing: -0.9px;
    text-align: justify;
}
.faq-tabs {
    display: grid;
    gap: 18px;
}

.faq-tab {
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    gap: 8px;
    font-family: 'Inter';
    align-items: center;
    font-weight: 800;
    font-size: 24px;
    line-height: 24px;
    letter-spacing: -0.72px;
    color: #C4C4C4;
}

.faq-tab img {
    opacity: 0.3;
    filter: grayscale(1);
}

.faq-tab.active img {
    opacity: 1;
    filter: unset;
}

.faq-tab.active{
  color: var(--primary_color);
}

.faq-content {
    display: grid;
    gap: 24px;
}

.faq-question{
  width:100%;
  background:none;
  border:none;
  padding:22px 0;
  font-size:18px;
  font-weight:600;
  display:flex;
  justify-content:space-between;
  cursor:pointer;
}

.faq-icon{
  font-size:20px;
  transition:transform .4s ease;
}

.faq-answer{
  max-height:0;
  overflow:hidden;
  opacity:0;
  transition:
    max-height .45s ease,
    opacity .35s ease;
}

.faq-item.active .faq-answer{
  max-height:500px;
  opacity:1;
}

.faq-item.active .faq-icon{
  transform:rotate(45deg);
}

{%- endstyle -%}

<div class="kretoss-section section-faqs-tab">
  <div class="{{ container }}" {{ max_width }}>
    <div class="faqs_tab_container">

      <div class="faqs_left_content">
        <div class="faqs_top">
          <h2>Have a <span>questions</span></h2>
          <p>Curious? You should be. Ludic Kitchen works a little different, so we've broken it down clearly -- funding, timelines, credits, and everything in between. If you're wondering about something, chances are it's already here.</p>
          <div class="faq-tabs">
            {% assign first_tab = '' %}
            {% for block in section.blocks %}
              {% if block.type == 'tab' %}
                {% if first_tab == '' %}
                  {% assign first_tab = block.settings.tab_handle %}
                {% endif %}
                <button
                  class="faq-tab {% if forloop.first %}active{% endif %}"
                  data-tab="{{ block.settings.tab_handle }}"
                  {{ block.shopify_attributes }}>
                  <img src="https://cdn.shopify.com/s/files/1/0962/3794/5196/files/file.svg?v=1766138300">
                  {{ block.settings.tab_title }}
                </button>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <a href="#" class="faq_btn theme_btn">View Project</a>
      </div>

      <div class="faq-content">
        {% for block in section.blocks %}
          {% if block.type == 'faq' %}
            <div
              class="faq-item"
              data-tab="{{ block.settings.tab_handle }}"
              {% unless block.settings.tab_handle == first_tab %}
                style="display:none"
              {% endunless %}
              {{ block.shopify_attributes }}>

              <button class="faq-question">
                {{ block.settings.question }}
                <span class="faq-icon">+</span>
              </button>

              <div class="faq-answer">
                {{ block.settings.answer }}
              </div>

            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function(){
  const scope = document.querySelector("#shopify-section-{{ section.id }}");

  function openFirstFaq(tabKey){
    const items = scope.querySelectorAll(".faq-item");
    let firstOpened = false;

    items.forEach(item => {
      const answer = item.querySelector(".faq-answer");

      if(item.dataset.tab === tabKey){
        item.style.display = "block";

        if(!firstOpened){
          item.classList.add("active");
          answer.style.maxHeight = answer.scrollHeight + "px";
          firstOpened = true;
        } else {
          item.classList.remove("active");
          answer.style.maxHeight = null;
        }
      } else {
        item.style.display = "none";
        item.classList.remove("active");
        answer.style.maxHeight = null;
      }
    });
  }

  // ðŸ‘‰ Init: open first FAQ of first tab
  const firstTab = scope.querySelector(".faq-tab.active")?.dataset.tab;
  if(firstTab){
    openFirstFaq(firstTab);
  }

  // TAB SWITCH
  scope.querySelectorAll(".faq-tab").forEach(tab=>{
    tab.addEventListener("click",()=>{
      const key = tab.dataset.tab;

      scope.querySelectorAll(".faq-tab")
        .forEach(t=>t.classList.remove("active"));
      tab.classList.add("active");

      openFirstFaq(key);
    });
  });

  // ACCORDION CLICK
  scope.querySelectorAll(".faq-question").forEach(q=>{
    q.addEventListener("click",()=>{
      const item = q.closest(".faq-item");
      const answer = item.querySelector(".faq-answer");

      if(item.classList.contains("active")){
        item.classList.remove("active");
        answer.style.maxHeight = null;
      } else {
        item.classList.add("active");
        answer.style.maxHeight = answer.scrollHeight + "px";
      }
    });
  });
});
</script>


{% schema %}
{
  "name": "FAQs Tab",
  "settings": [
    {
      "type": "text",
      "id": "max_width",
      "label": "Max width",
      "default": "1296px"
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Full width"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Padding",
      "placeholder": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Margin",
      "placeholder": "0px 0px 0px 0px"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "FAQ Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab title",
          "default": "Funding"
        },
        {
          "type": "text",
          "id": "tab_handle",
          "label": "Tab handle",
          "info": "Example: funding"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "tab_handle",
          "label": "Tab handle",
          "info": "Must match tab handle"
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs Tab"
    }
  ]
}
{% endschema %}
