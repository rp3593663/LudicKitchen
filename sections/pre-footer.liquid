{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'kretoss-container' -%}
{%- else -%}
	{%- assign container = 'page-width' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- style -%}
  {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .section-pre-footer{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}

.pre_footer_container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 18px;
}
.left_pre_footer {
    display: grid;
    gap: 18px;
}
.scanner_block {
    background: #F9F9F9;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.scanner_block span {
    position: absolute;
    bottom: 30px;
    font-weight: 500;
    font-size: 24px;
    line-height: 20px;
    letter-spacing: -1.2px;
    text-align: center;
}
.middle_pre_footer {
    padding: 54px 20px;
    background: #F9F9F9;
    border-radius: 16px;
    margin: auto;
    text-align: center;
}
.middle_pre_footer img {
    max-width: 255px;
    width: 100%;
}
.middle_pre_footer p {
    margin: 34px 0px 108px;
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    letter-spacing: -0.9px;
    text-align: justify;
}
.blank_block {
    background: #F9F9F9;
    border-radius: 16px;
}
.newsletter_block .field__input {
    background: #F1F1F1!important;
    border-radius: 6px;
    font-weight: 400;
    font-size: 14px;
    line-height: 28px;
    letter-spacing: -0.7px;
    text-align: justify;
    vertical-align: middle;
    color: #1a1a1a;
    min-height: 48px;
    padding: 10px 20px;
    border: unset;
    width: 100%;
    font-family: var(--font-family)!important;
}
.newsletter_block .field::after{
    content: unset;
}
.newsletter_block .field__input::placeholder,
.newsletter_block .customer .field input::placeholder {
    opacity: 1!important;
    color: #949598;
}
.newsletter_block button#Subscribe {
    position: relative;
    top: unset;
    right: unset;
    min-width: 114px;
    height: 48px;
    font-family: Inter;
    font-weight: 600;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.48px;
    color: #FFF;
    background: #000;
    border-radius: 6px;
}
.middle_pre_footer > span {
    font-weight: 400;
    font-size: 14px;
    line-height: 14px;
    letter-spacing: -0.42px;
    margin-top: 14px;
    display: block;
    text-align: center;
    color: #838383;
}
.newsletter_block .field {
    gap: 8px;
    display: flex;
}
.right_pre_footer {
    display: grid;
    gap: 18px;
}
.menu_block {
    background: #F9F9F9;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 0px;
}
ul.pre_footer_menu {
    margin: 0px;
    padding: 0px;
    list-style-type: none;
    display: grid;
    gap: 56px;
}
a.pre_footer_list-menu__item {
    font-weight: 700;
    font-size: 32px;
    display: block;
    line-height: 23px;
    letter-spacing: -1.6px;
    color: #000;
    text-decoration: unset;
}
.copyright_block {
    padding: 34px 0px;
    border-radius: 16px;
    background: #F9F9F9;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
.copyright_text {
    font-family: Inter;
    font-weight: 500;
    font-size: 16px;
    line-height: 28px;
    letter-spacing: -0.8px;
    text-align: center;
}
.copyright_text p{
    margin: 0px;
}
@media only screen and (max-width: 1023px) and (min-width: 768px)  {
    .scanner_block img {
        width: 70%;
    }
    .middle_pre_footer {
        padding: 30px 20px;
    }
    .middle_pre_footer img {
        max-width: 155px;
    }
    .middle_pre_footer p {
        margin: 18px 0px 60px;
        font-size: 16px;
        line-height: 22px;
    }
    .newsletter_block .field {
        display: grid;
        justify-content: center;
        align-items: center;
        margin: auto;
    }
    .newsletter_block button#Subscribe {
        margin: auto;
    }
    .menu_block {
        padding: 30px 10px;
    }
    ul.pre_footer_menu {
        gap: 50px;
    }
    a.pre_footer_list-menu__item {
        font-size: 22px;
        line-height: 22px;
        letter-spacing: -1.1px;
    }
}
@media(max-width: 767px){
.pre_footer_container {
    grid-template-columns: 1fr;
    gap: 8px;
}
.middle_pre_footer {
    padding: 68px 18px 46px;
    border-radius: 8px;
    order: -1;
}
.middle_pre_footer img {
    max-width: 216px;
}
.middle_pre_footer p {
    margin: 45px 0px 108px;
    font-size: 14px;
    line-height: 22px;
    letter-spacing: -0.7px;
}
.newsletter_block button#Subscribe {
    min-width: 96px;
    height: 40px;
    font-size: 14px;
    line-height: 24px;
    letter-spacing: -0.7px;
}
.newsletter_block .field__input {
    font-size: 12px;
    line-height: 20px;
    letter-spacing: -0.6px;
    min-height: 40px;
    height: 40px;
    padding: 8px 20px;
}
.middle_pre_footer > span {
    font-size: 13px;
    line-height: 13px;
    letter-spacing: -0.3px;
    margin-top: 20px;
}
.scanner_block {
    border-radius: 8px;
    min-height: 332px;
}
.scanner_block img {
    width: 55%;
}
.scanner_block span {
    bottom: 24px;
    font-size: 20px;
    line-height: 20px;
    letter-spacing: -1px;
}
.blank_block {
    display: none;
}
.menu_block {
    display: none;
}
.copyright_block {
    padding: 28px 0px;
    border-radius: 8px;
}
.copyright_text {
    font-size: 14px;
    line-height: 24px;
    letter-spacing: -0.7px;
}
}
{%- endstyle -%}
