{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'kretoss-container' -%}
{%- else -%}
	{%- assign container = 'page-width' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- style -%}
  {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .section-pre-footer{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .section-pre-footer{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}

.pre_footer_container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 18px;
}
.left_pre_footer {
    display: grid;
    gap: 18px;
}
.scanner_block {
    background: var(--grey);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 48px 60px;
}
.scanner_block a {
    position: absolute;
    bottom: 30px;
    font-weight: 500;
    font-size: 24px;
    line-height: 20px;
    letter-spacing: -1.2px;
    text-align: center;
    /* text-decoration: unset; */
    color: var(--black);
}
.middle_pre_footer {
    padding: 80px 20px 70px;
    background: var(--grey);
    border-radius: 16px;
    margin: auto;
    text-align: center;
}
.middle_pre_footer img {
    max-width: 255px;
    width: 100%;
}
.middle_pre_footer p {
    margin: 34px 0px 108px;
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    letter-spacing: -0.54px;
    text-align: justify;
}
.blank_block {
    background: var(--grey);
    border-radius: 16px;
}
.footer_share_block {
    background: var(--grey);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-direction: column;
    padding: 66px 38px;
    height: fit-content;
}
.footer_share_block h2 {
    margin: 0px;
    font-weight: 600;
    font-size: 24px;
    line-height: 20px;
    letter-spacing: -0.72px;
    text-align: center;
}
.footer_share_block p {
    font-weight: 400;
    font-size: 16px;
    line-height: 16px;
    letter-spacing: -0.48px;
    text-align: center;
    margin: 16px 0px 0px;
}
.footer_share_block .share-icons {
    margin: 40px auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 24px;
}
.footer_share_block .share-icons a {
    display: block;
    line-height: 27px;
    height: 27px;
}
#copyLinkBtn button{
    background: var(--black);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    color: var(--white);
    border-radius: 6px;
    border: unset;
    width: 116px;
    min-height: 40px;
    font-weight: 600;
    font-size: 13px;
    line-height: 13px;
    letter-spacing: -0.39px;
    font-family: var(--font-family);
    cursor: pointer;
    margin: auto;
    padding: 0px;
}
.footer_share_inner {
    position: relative;
}
.copy-msg {
    display: none;
    margin-top: 12px;
    color: #008200;
    font-size: 14px;
    line-height: 14px;
    letter-spacing: -0.42px;
    font-weight: 600;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}
.newsletter_block .field__input {
    background: #F1F1F1!important;
    border-radius: 6px;
    font-weight: 400;
    font-size: 12px;
    line-height: 28px;
    letter-spacing: -0.36px;
    text-align: justify;
    vertical-align: middle;
    color: #1a1a1a;
    min-height: 40px;
    padding: 6px 20px;
    border: unset;
    width: 100%;
    font-family: var(--font-family)!important;
}
.newsletter_block .field::after{
    content: unset;
}
.newsletter_block .field__input::placeholder,
.newsletter_block .customer .field input::placeholder {
    opacity: 1!important;
    color: #949598;
}
.newsletter_block button#Subscribe {
    position: relative;
    top: unset;
    right: unset;
    min-width: 114px;
    height: 40px;
    font-family: Inter;
    font-weight: 600;
    font-size: 14px;
    line-height: 14px;
    letter-spacing: -0.42px;
    color: #FFF;
    background: #000;
    border-radius: 6px;
}
.middle_pre_footer > span {
    font-weight: 400;
    font-size: 14px;
    line-height: 14px;
    letter-spacing: -0.42px;
    margin-top: 14px;
    display: block;
    text-align: center;
    color: #838383;
}
.newsletter_block .field {
    gap: 8px;
    display: flex;
}
.right_pre_footer {
    display: grid;
    gap: 18px;
}
.menu_block {
    background: var(--grey);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 0px;
}
ul.pre_footer_menu {
    margin: 0px;
    padding: 0px;
    list-style-type: none;
    display: grid;
    gap: 56px;
}
a.pre_footer_list-menu__item {
    font-weight: 600;
    font-size: 32px;
    display: block;
    line-height: 23px;
    letter-spacing: -0.96px;
    color: #000;
    text-decoration: unset;
    cursor: pointer;
}
.copyright_block {
    padding: 34px 0px;
    border-radius: 16px;
    background: var(--grey);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
.copyright_text {
    font-family: Inter;
    font-weight: 500;
    font-size: 16px;
    line-height: 28px;
    letter-spacing: -0.8px;
    text-align: center;
}
.copyright_text p{
    margin: 0px;
}

@media only screen and (max-width: 1023px) and (min-width: 768px)  {
    .scanner_block img {
        width: 100%;
    }
    .scanner_block {
        padding: 54px 40px;
    }
    .scanner_block a {
        font-size: 18px;
    }
    .footer_share_block {
        padding: 60px 20px;
    }
    .footer_share_block h2 {
        font-size: 20px;
        line-height: 25px;
        letter-spacing: -0.6px;
    }
    .footer_share_block p {
        line-height: 24px;
    }
    .middle_pre_footer {
        padding: 30px 20px;
    }
    .middle_pre_footer img {
        max-width: 155px;
    }
    .middle_pre_footer p {
        margin: 18px 0px 60px;
        font-size: 16px;
        line-height: 22px;
        letter-spacing: -0.48px;
    }
    .newsletter_block .field {
        display: grid;
        justify-content: center;
        align-items: center;
        margin: auto;
    }
    .newsletter_block button#Subscribe {
        margin: auto;
    }
    .menu_block {
        padding: 30px 10px;
    }
    ul.pre_footer_menu {
        gap: 50px;
    }
    a.pre_footer_list-menu__item {
        font-size: 22px;
        line-height: 22px;
        letter-spacing: -1.1px;
    }
}
@media(min-width: 768px){
    .menu_block.mobile{
        display: none;
    }
}
@media(max-width: 767px){
    .menu_block.desktop{
        display: none;
    }
    .menu_block {
        order: -1;
    }
    .menu_block {
        order: -1;
        border-radius: 8px;
        padding: 38px 0px;
    }
    ul.pre_footer_menu {
        gap: 34px;
    }
    a.pre_footer_list-menu__item {
        font-size: 24px;
        line-height: 24px;
        letter-spacing: -0.72px;
        text-align: center;
    }
    .pre_footer_container {
        grid-template-columns: 1fr;
        gap: 8px;
    }
    .middle_pre_footer {
        padding: 68px 18px 46px;
        border-radius: 8px;
        order: -1;
    }
    .middle_pre_footer img {
        max-width: 216px;
    }
    .middle_pre_footer p {
        margin: 45px 0px 108px;
        font-size: 14px;
        line-height: 22px;
        letter-spacing: -0.42px;
    }
    .newsletter_block button#Subscribe {
        min-width: 96px;
        height: 40px;
        font-size: 14px;
        line-height: 24px;
        letter-spacing: -0.7px;
    }
    .newsletter_block .field__input {
        font-size: 12px;
        line-height: 20px;
        letter-spacing: -0.6px;
        min-height: 40px;
        height: 40px;
        padding: 8px 20px;
    }
    .middle_pre_footer > span {
        font-size: 13px;
        line-height: 13px;
        letter-spacing: -0.3px;
        margin-top: 20px;
    }
    .scanner_block {
        border-radius: 8px;
        padding: 40px 52px;
    }
    .scanner_block img {
        width: 100%;
    }
    .scanner_block a {
        bottom: 24px;
        font-size: 20px;
        line-height: 20px;
        letter-spacing: -1px;
    }
    .footer_share_block {
        border-radius: 8px;
        padding: 50px 20px;
    }
    .footer_share_block h2 {
        font-size: 20px;
        line-height: 20px;
        letter-spacing: -0.6px;
    }
    .footer_share_block p {
        font-size: 14px;
        line-height: 14px;
        letter-spacing: -0.42px;
    }
    .blank_block {
        display: none;
    }
    .copyright_block {
        padding: 28px 0px;
        border-radius: 8px;
    }
    .copyright_text {
        font-size: 14px;
        line-height: 24px;
        letter-spacing: -0.7px;
    }
}
{%- endstyle -%}
