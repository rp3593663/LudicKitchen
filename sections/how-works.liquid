{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'kretoss-container' -%}
{%- else -%}
	{%- assign container = 'page-width' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- style -%}
  {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .section-how-works{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .section-how-works{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .section-how-works{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .section-how-works{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
    
{%- endstyle -%}
<div class="kretoss-section section-how-works" id="how_it_works">
  <div class="{{ container }}" {{ max_width }}>
    <div class="how_works_container">

      <!-- LEFT CONTENT -->
      <div class="works_left_content">
        <div class="top_content">
          <h2>
            {{ section.settings.heading_before }}
            <span>{{ section.settings.heading_highlight }}</span>
            {{ section.settings.heading_after }}
          </h2>

          <p>{{ section.settings.description }}</p>
        </div>

        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="how_works_btn theme_btn">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>

      <!-- MOBILE ACCORDION -->
      <div class="work_steps_mobile">
        {% for block in section.blocks %}
          <div class="work_step_item {% if forloop.first %}active{% endif %}">
            <button class="work_step_header">
              <span class="step_number">{{ block.settings.step_number }}</span>
              <span class="step_title">{{ block.settings.title }}</span>
              <span class="step_icon">
                <svg width="16" height="16" viewBox="0 0 16 16">
                  <path d="M8 3.3V12.7M3.3 8H12.7"
                        stroke="#1A1A1A"
                        stroke-width="1.46"
                        stroke-linecap="round"/>
                </svg>
              </span>
            </button>
            <div class="work_step_content">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- DESKTOP GRID -->
      <div class="works_right_content">
        <div class="work_steps">
          {% for block in section.blocks %}
            <div class="work_step">
              <div class="steps_top">
                <h5>{{ block.settings.step_number }}</h5>
                <p>{{ block.settings.title }}</p>
              </div>
              <div class="steps_bottom">
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('#shopify-section-{{ section.id }} .work_step_header')
    .forEach(header => {
      header.addEventListener('click', () => {
        const item = header.closest('.work_step_item');

        // Close others
        item.parentElement.querySelectorAll('.work_step_item')
          .forEach(i => {
            if (i !== item) i.classList.remove('active');
          });

        item.classList.toggle('active');
      });
    });
});
</script>

{% schema %}
{
    "name": "How Works",
    "settings": [
    {
      "type": "header",
      "content": "Layout settings"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max width"
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Full width"
    },
    {
      "type": "text",
      "id": "heading_before",
      "label": "Heading (before highlight)",
      "default": "How"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlighted word",
      "default": "Kitchen"
    },
    {
      "type": "text",
      "id": "heading_after",
      "label": "Heading (after highlight)",
      "default": "works"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "Padding (desktop | 1200 | 991 | 767)"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Margin (desktop | 1200 | 991 | 767)"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Work step",
      "settings": [
        {
          "type": "text",
          "id": "step_number",
          "label": "Step number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Step description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How Works"
    }
  ]
}

{% endschema %}