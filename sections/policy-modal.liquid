{% style %}
/* ===== POLICY MODAL BASE ===== */
.policy_modal {
  position: fixed;
  inset: 0;
  z-index: 99999;
  display: none;
}

.policy_modal.active {
  display: flex;
}

/* Overlay */
.policy_modal_overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.65);
}

/* Modal box */
.policy_modal_box {
  position: relative;
  background: #fff;
  max-width: 980px;
  width: 90%;
  margin: auto;
  border-radius: 16px;
  padding: 32px 36px;
  z-index: 2;
  box-shadow: 0 20px 60px rgba(0,0,0,0.25);
  animation: policyFadeIn 0.25s ease;
}

/* Close button */
.policy_modal_close {
  position: absolute;
  top: 16px;
  right: 20px;
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  line-height: 1;
}

/* Title */
.policy_modal_title {
  margin: 0 0 24px;
  font-size: 28px;
  font-weight: 600;
  letter-spacing: -0.8px;
}

/* ===== CONTENT LAYOUT ===== */
.policy_modal_content {
  display: flex;
  gap: 32px;
}

/* LEFT TABS */
.policy_tabs {
  width: 260px;
  list-style: none;
  padding: 0;
  margin: 0;
  border-right: 1px solid #e6e6e6;
}

.policy_tabs li {
  padding: 14px 0;
  cursor: pointer;
  font-size: 16px;
  font-weight: 500;
  color: #8a8a8a;
  transition: color 0.2s ease;
}

.policy_tabs li:hover {
  color: #000;
}

.policy_tabs li.active {
  color: #000;
  font-weight: 600;
}

/* ===== RIGHT CONTENT ===== */
.policy_tab_contents {
  flex: 1;
  max-height: 60vh;
  overflow-y: auto;
  padding-right: 8px;
}

.policy_tab {
  display: none;
}

.policy_tab.active {
  display: block;
}

.policy_tab h3 {
  margin: 0 0 16px;
  font-size: 22px;
  font-weight: 600;
}

/* Content typography */
.policy_tab p {
  font-size: 15px;
  line-height: 26px;
  color: #333;
  margin-bottom: 14px;
}

.policy_tab ul {
  padding-left: 18px;
}

.policy_tab li {
  font-size: 15px;
  line-height: 26px;
}

/* Scrollbar (desktop only) */
.policy_tab_contents::-webkit-scrollbar {
  width: 4px;
}

.policy_tab_contents::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 4px;
}

/* ===== ANIMATION ===== */
@keyframes policyFadeIn {
  from {
    opacity: 0;
    transform: translateY(12px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ===== MOBILE ===== */
@media (max-width: 767px) {

  .policy_modal_box {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0;
    padding: 20px;
  }

  .policy_modal_content {
    flex-direction: column;
    gap: 20px;
  }

  .policy_tabs {
    width: 100%;
    display: flex;
    overflow-x: auto;
    border-right: 0;
    border-bottom: 1px solid #e6e6e6;
  }

  .policy_tabs li {
    white-space: nowrap;
    padding: 10px 16px;
    font-size: 14px;
  }

  .policy_tab_contents {
    max-height: calc(100vh - 220px);
  }

  .policy_modal_title {
    font-size: 22px;
  }
}

{% endstyle %}




<section id="policy-modal-section">
  <div class="policy_modal" id="policyModal">
    <div class="policy_modal_overlay"> </div>

    <div class="policy_modal_box">
      <button class="policy_modal_close">&times;</button>

      <h2 class="policy_modal_title">
        {{ section.settings.title }}
      </h2>

      <div class="policy_modal_content">

        <!-- LEFT TABS -->
        <ul class="policy_tabs">
          {%- for block in section.blocks -%}
            <li
              class="{% if forloop.first %}active{% endif %}"
              data-tab="tab-{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_title }}
            </li>
          {%- endfor -%}
        </ul>

        <!-- RIGHT CONTENT -->
        <div class="policy_tab_contents">
          {%- for block in section.blocks -%}
            <div
              class="policy_tab {% if forloop.first %}active{% endif %}"
              id="tab-{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_content }}
            </div>
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Policy Modal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Modal Title",
      "default": "Terms & Policies"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Policy Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Tab title"
        },
        {
          "type": "richtext",
          "id": "tab_content",
          "label": "Tab Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Policy Modal"
    }
  ]
}
{% endschema %}
