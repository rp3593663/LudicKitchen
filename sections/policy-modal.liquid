{% style %}
/* ===== POLICY MODAL BASE ===== */
.policy_modal {
  position: fixed;
  inset: 0;
  z-index: 99999;
  display: none;
}

.policy_modal.active {
  display: flex;
}
.policy_modal_overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.65);
}
.policy_modal_box {
    position: relative;
    background: #F9F9F9;
    max-width: 1288px;
    width: 90%;
    margin: auto;
    border-radius: 20px;
    padding: 40px 0px 0px 40px;
    z-index: 2;
    box-shadow: 0 20px 60px rgba(0,0,0,0.25);
    animation: policyFadeIn 0.25s ease;
}
.policy_modal_close {
  position: absolute;
  top: 16px;
  right: 20px;
  font-size: 28px;
  background: none;
  border: none;
  cursor: pointer;
  line-height: 1;
}
.policy_modal_title {
    font-weight: 700;
    font-size: 48px;
    line-height: 48px;
    letter-spacing: -1.45px;
    margin: 0px 0px 50px;
}
.policy_modal_content {
  display: flex;
  gap: 36px;
    align-items: flex-start;
}
.policy_tabs {
  width: 262px;
  list-style: none;
  padding: 0;
  margin: 0;
    display: grid;
    gap: 18px;
}

.policy_tabs li {
    cursor: pointer;
    color: #C4C4C4;
    transition: color 0.2s ease;
    font-weight: 600;
    font-size: 24px;
    line-height: 24px;
    letter-spacing: -0.72px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.policy_tabs li:hover {
  color: #000;
}

.policy_tabs li.active {
  color: #000;
  font-weight: 600;
}
.policy_tab_contents {
    flex: 1;
    max-height: 550px;
    overflow-y: auto;
    background: #EBEBEB;
    border-radius: 16px;
    padding: 30px;
}
.policy_tab {
  display: none;
}
.policy_tab.active {
  display: block;
}
.policy_tab h3 {
  margin: 0 0 16px;
  font-size: 22px;
  font-weight: 600;
}
.policy_tab p {
  font-size: 15px;
  line-height: 26px;
  color: #333;
  margin-bottom: 14px;
}

.policy_tab ul {
  padding-left: 18px;
}

.policy_tab li {
  font-size: 15px;
  line-height: 26px;
}

/* Scrollbar (desktop only) */
.policy_tab_contents::-webkit-scrollbar {
  width: 4px;
}

.policy_tab_contents::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 4px;
}

/* ===== ANIMATION ===== */
@keyframes policyFadeIn {
  from {
    opacity: 0;
    transform: translateY(12px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ===== MOBILE ===== */
@media (max-width: 767px) {

  .policy_modal_box {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0;
    padding: 20px;
  }

  .policy_modal_content {
    flex-direction: column;
    gap: 20px;
  }

  .policy_tabs {
    width: 100%;
    display: flex;
    overflow-x: auto;
    border-right: 0;
    border-bottom: 1px solid #e6e6e6;
  }

  .policy_tabs li {
    white-space: nowrap;
    padding: 10px 16px;
    font-size: 14px;
  }

  .policy_tab_contents {
    max-height: calc(100vh - 220px);
  }

  .policy_modal_title {
    font-size: 22px;
  }
}

{% endstyle %}




<section id="policy-modal-section">
  <div class="policy_modal" id="policyModal">
    <div class="policy_modal_overlay"> </div>

    <div class="policy_modal_box">
      <button class="policy_modal_close">&times;</button>

      <h2 class="policy_modal_title">
        {{ section.settings.title }}
      </h2>

      <div class="policy_modal_content">

        <!-- LEFT TABS -->
        <ul class="policy_tabs">
          {%- for block in section.blocks -%}
            <li class="{% if forloop.first %}active{% endif %}" data-tab="tab-{{ block.id }}" {{ block.shopify_attributes }}>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4.36719 8.72734V3.63643L5.82173 2.18188H7.63991H14.1854L16.3672 4.00007L20.0036 8.00007V9.09098V14.9092L19.2763 20.7273L17.8217 22.1819H16.0036H10.549H6.18537L4.36719 19.6364V17.4546V14.5455V8.72734Z" fill="#214ECF"/>
                    <path d="M8.8 2H14L20 8V17.2C20 18.8802 20 19.7202 19.673 20.362C19.3854 20.9265 18.9265 21.3854 18.362 21.673C17.7202 22 16.8802 22 15.2 22H8.8C7.11984 22 6.27976 22 5.63803 21.673C5.07354 21.3854 4.6146 20.9265 4.32698 20.362C4 19.7202 4 18.8802 4 17.2V6.8C4 5.11984 4 4.27976 4.32698 3.63803C4.6146 3.07354 5.07354 2.6146 5.63803 2.32698C6.27976 2 7.11984 2 8.8 2Z" stroke="#214ECF" stroke-width="1.45455" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M16 13H8M16 17H8M10 9H8" stroke="white" stroke-width="1.45455" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {{ block.settings.tab_title }}
            </li>
          {%- endfor -%}
        </ul>

        <!-- RIGHT CONTENT -->
        <div class="policy_tab_contents">
          {%- for block in section.blocks -%}
            <div
              class="policy_tab {% if forloop.first %}active{% endif %}"
              id="tab-{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_content }}
            </div>
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Policy Modal",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Modal Title",
      "default": "Terms & Policies"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Policy Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Tab title"
        },
        {
          "type": "richtext",
          "id": "tab_content",
          "label": "Tab Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Policy Modal"
    }
  ]
}
{% endschema %}
