{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'kretoss-container' -%}
{%- else -%}
	{%- assign container = 'page-width' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- style -%}
  {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .section-featured-project{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .section-featured-project{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .section-featured-project{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .section-featured-project{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
    .section-featured-project h2.h2_title {
        font-weight: 800;
        font-size: 48px;
        line-height: 48px;
        letter-spacing: -1.44px;
        text-align: center;
        margin: 0px;
    }
    .section-featured-project h2.h2_title span.border_text {
        position: relative;
        padding: 0px 20px;
        color: var(--primary_color);
    }
    .section-featured-project h2.h2_title span.border_text img{
        position: absolute;
        left: 0px;
        top: 5px;
        width: 100%;
    }
    .featured_project_container {
        display: grid;
        grid-template-columns: 1.36fr 0.64fr;
        gap: 8px;
        margin-top: 60px;
    }   
    .p_right_image {
        background: var(--grey);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 16px;
        padding: 20px;
    }  
    .p_left_content {
        background: var(--grey);
        border-radius: 16px;
        padding: 24px 40px 32px;
    } 
    h3.project_title {
        font-weight: 700;
        font-size: 32px;
        line-height: 32px;
        letter-spacing: -1.6px;
        text-align: left;
        max-width: 168px;
        display: grid;
        gap: 10px;
        margin: 0px;
    }
    .project_data_container {
        margin-top: 15px;
        padding-top: 20px;
        border-top: dotted 2px var(--primary_color);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }
    .info_points {
        display: grid;
        gap: 12px;
    }
    .info_li {
        display: flex;
        gap: 10px;
        align-items: baseline;
    }
    .info_li p {
        margin: 0;
        font-weight: 500;
        font-size: 14px;
        line-height: 20px;
        letter-spacing: -0.6px;
    }
    .raised_counters_data {
        display: flex;
        gap: 44px;
    }
    .count_data {
        display: grid;
        gap: 4px;
    }
    .count_data h5 {
        font-weight: 700;
        font-size: 22px;
        line-height: 25px;
        letter-spacing: -1.1px;
        text-align: left;
        margin: 0px;
        color: var(--primary_color);
    }
    .count_data p {
        font-weight: 500;
        font-size: 10px;
        line-height: 10px;
        letter-spacing: -0.5px;
        margin: 0px;
    }
    .raised_goal {
        display: grid;
        gap: 6px;
        font-weight: 700;
        font-size: 22px;
        line-height: 25px;
        letter-spacing: -1.1px;
        color: var(--primary_color);
    }
    .raised_goal span {
        font-weight: 500;
        font-size: 10px;
        line-height: 10px;
        letter-spacing: -0.5px;
        color: var(--black);
    }
    .project_data_counter {
        background: #F2F1F1;
        border-radius: 8px;
        padding: 12px 18px;
    }
    .raised_progress_bar {
        margin: 18px 0px 24px;
    }
{%- endstyle -%}
